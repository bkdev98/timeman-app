{
  "name": "timeman-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "react-build": "cd webapp && yarn && yarn build && cd ..",
    "build": "yarn react-build && yarn dist:mac && yarn dist:win",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win --x64 --ia32",
    "prebuild": "rm -rf ./webapp/build && rm -rf ./dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "homepage": "./",
  "build": {
    "appId": "com.quocs.timeman",
    "productName": "Timeman",
    "copyright": "Copyright Â© 2021 Quocs Studio",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/images/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extends": null,
    "files": [
      "./webapp/build/**/*",
      "./webapp/node_modules/**/*",
      "./webapp/src/**/*",
      "./webapp/public/*",
      "./assets/images/*",
      "./main.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "zustand": "^3.3.3"
  }
}
